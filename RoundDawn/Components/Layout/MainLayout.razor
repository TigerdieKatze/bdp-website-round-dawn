@inherits LayoutComponentBase

<div class="page">
    <div class="h-screen w-screen bg-cover bg-center bg-fixed" style="background-image: url('background_blurred.jpg');" />
    <div class="h-screen w-screen absolute">
        <NavMenu />

        <main class="relative h-screen">
            <article class="content px-4 h-screen">
                @Body
            </article>
        </main>
    </div>
</div>

